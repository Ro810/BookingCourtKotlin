#!/bin/sh

echo "ğŸ” Running Spotless code formatter..."

FILES=$(git diff --cached --name-only --diff-filter=ACMR "*.kt" "*.kts" | sed 's| |\\ |g')
[ -z "$FILES" ] && exit 0

echo "ğŸ“ Formatting Kotlin files..."
./gradlew spotlessApply --quiet

if [ $? -ne 0 ]; then
  echo "âŒ Spotless formatting failed. Please fix the issues and try again."
  exit 1
fi

echo "âœ… Code formatted successfully!"

echo "ğŸ“¦ Re-adding formatted files to git..."
for FILE in $FILES
do
  git add "$FILE"
done

echo "âœ… Pre-commit hook completed successfully!"
exit 0
